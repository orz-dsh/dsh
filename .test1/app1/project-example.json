{
  "name": "app1",
  "runtime": {
    "minVersion": "1.0.0",
    "maxVersion": "2.0.0"
  },
  "option": {
    "items": [
      {
        "name": "test",
        "default": "c",
        "choices": [
          "a",
          "b",
          "c",
          "d"
        ],
        "assigns": [
          {
            "project": "lib1",
            "option": "test",
            "mapping": "value == 'a' ? '1234' : (value == 'b' ? '5678' : (value == 'c' ? '0000' : nil))"
          },
          {
            "project": "lib2",
            "option": "test",
            "mapping": "upper(value)"
          }
        ]
      }
    ],
    "verifies": [
      "test != 'd'"
    ]
  },
  "script": {
    "sources": [
      {
        "dir": "script",
        "match": "test == 'a' || test == 'b'"
      }
    ],
    "imports": [
      {
        "local": {
          "dir": "./.test1/lib1"
        },
        "match": "test == 'a'"
      },
      {
        "local": {
          "dir": "./.test1/lib2"
        },
        "match": "test == 'a'"
      }
    ]
  },
  "config": {
    "sources": [
      {
        "dir": "config",
        "files": [
          "test1.yml"
        ],
        "match": "test == 'b'"
      }
    ],
    "imports": [
      {
        "local": {
          "dir": "./.test1/lib1"
        },
        "match": "test == 'a' || test == 'b'"
      },
      {
        "local": {
          "dir": "./.test1/lib2"
        },
        "match": "test == 'a' || test == 'b'"
      }
    ]
  }
}